<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:id="@+id/score_textview"
        android:text="@string/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/turn_score_textview"
        android:layout_below="@id/score_textview"
        android:text="@string/turn_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:id="@+id/dice_layout"
        android:layout_below="@id/turn_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <ImageView
                android:id="@+id/dice1"
                android:src="@drawable/white1">
            </ImageView>

            <ImageView
                android:id="@+id/dice2"
                android:src="@drawable/white2">
            </ImageView>

            <ImageView
                android:id="@+id/dice3"
                android:src="@drawable/white3">
            </ImageView>
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/dice4"
                android:src="@drawable/white4">
            </ImageView>

            <ImageView
                android:id="@+id/dice5"
                android:src="@drawable/white5">
            </ImageView>

            <ImageView
                android:id="@+id/dice6"
                android:src="@drawable/white6">
            </ImageView>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_below="@id/dice_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <Button android:id="@+id/save_button"
            android:text="@string/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/score_button"
            android:text="@string/score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/throw_button"
            android:text="@string/throw_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
